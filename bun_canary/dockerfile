# Bun Canary Dockerfile for Pterodactyl
ARG BUN_VERSION=canary

# Use the official Bun image from Oven
FROM --platform=$TARGETOS/$TARGETARCH oven/bun:${BUN_VERSION}

LABEL author="jjakesv870@gmail.com" maintainer="jjakesv"
LABEL org.opencontainers.image.source="https://github.com/jjakesv/yolks"
LABEL org.opencontainers.image.licenses=MIT

# Install deps & add non-root user
RUN apt-get update \
    && apt-get install -y git curl build-essential ca-certificates tini \
    && adduser --disabled-password --gecos "" container \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Switch to non-root
USER container
ENV USER=container HOME=/home/container
WORKDIR /home/container

# Copy entrypoint
COPY ./entrypoint.sh /entrypoint.sh

# Default command
CMD [ "/bin/bash", "/entrypoint.sh" ]
